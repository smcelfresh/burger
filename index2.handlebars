<div class="container">
	<div class="row">
		<div class="col-md-12">
			<img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
		</div>
	<!-- end first row -->
	</div>

	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Da-Burger</h1>
		</div>
	<!-- end second row -->
	</div>

	<div class="row">
	  <div class="col-md-5">
	    <h3>Uneaten Burgers</h3>
	   	  <ul style="list-style-type:none">
		  	{{#each burgers}}
			{{#unless this.devoured}}
			  <li>
			    <h4>{{this.id}}. {{this.burger_name}}
				<form action='burgers/update/{{this.id}}?_method=PUT' method='POST'>
			 	<input type='hidden' name='devoured' value='true'>
					<button type='submit' class="btn btn-default">DEVOUR THIS!</button>
				</form>
				</h4>
			  </li>
				{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>
		<div class="col-md-5">
		  <h3>Eaten Burgers</h3>
    		<ul style="list-style-type:none">
			  {{#each burgers}}
			  {{#if this.devoured}}
			  <li>
			    <h4>{{this.id}}. {{this.burger_name}}</h4>
			  </li>
				 {{/if}}
				 {{/each}}
			</ul>
		</div>
	<!-- end third row -->
	</div>
	<br><br>

	<div class="row">
		<div class="col-md-12 text-center">
			<form class="create-form">

				<div class="form-group">
					<h5 class="text-center">Enter a burger you want to eat and click Submit!</h5>
					<textarea id="bg" type="text" name="burger_name"></textarea><br>
					<button class="btn btn-default" type="submit">Submit</button>
				</div>
			</form>
		</div>
	<!-- end fourth row -->
	</div>

<!-- end bootstrap container -->
</div>